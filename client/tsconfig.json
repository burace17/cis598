
{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "sourceMap": true,
      "jsx": "react",
      "target": "es5",
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src"
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "js"
    ]
  }